<?xml version="1.0" encoding="utf-8"?>

<navigation
    android:id="@+id/home"
    app:startDestination="@id/home_fragment"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context="com.bed.seller.presentation.ui.dashboard.home.HomeFragment" >

    <include app:graph="@navigation/setting_nav" />
    <include app:graph="@navigation/notification_nav" />

    <fragment
        android:id="@+id/home_fragment"
        android:label="@string/app_name"
        tools:layout="@layout/home_fragment"
        android:name="com.bed.seller.presentation.ui.dashboard.home.HomeFragment" >

        <action
            android:id="@+id/action_home_fragment_to_permission_fragment"
            app:destination="@id/permission_fragment" />

        <action
            android:id="@+id/action_home_fragment_to_sale_fragment"
            app:destination="@id/sale_fragment" />

        <action
            android:id="@+id/action_home_fragment_to_verify_exit_fragment"
            app:destination="@id/exit_fragment" />

        <action
            android:id="@+id/action_home_fragment_to_setting_fragment"
            app:destination="@id/setting"
            app:exitAnim="@anim/nav_pop_exit_to_left"
            app:enterAnim="@anim/nav_pop_enter_from_right"
            app:popExitAnim="@anim/nav_exit_to_right"
            app:popEnterAnim="@anim/nav_enter_from_left" />

        <action
            android:id="@+id/action_home_fragment_to_notification_fragment"
            app:destination="@id/notification"
            app:exitAnim="@anim/nav_pop_exit_to_left"
            app:enterAnim="@anim/nav_pop_enter_from_right"
            app:popExitAnim="@anim/nav_exit_to_right"
            app:popEnterAnim="@anim/nav_enter_from_left" />

    </fragment>

    <dialog
        android:id="@+id/permission_fragment"
        tools:layout="@layout/permission_fragment"
        android:name="com.bed.seller.presentation.ui.dashboard.permission.PermissionFragment" />

    <dialog
        android:id="@+id/sale_fragment"
        tools:layout="@layout/sale_fragment"
        android:name="com.bed.seller.presentation.ui.dashboard.sale.SaleFragment" />

    <dialog
        android:id="@+id/exit_fragment"
        tools:layout="@layout/exit_fragment"
        android:name="com.bed.seller.presentation.ui.dashboard.exit.DashboardExitFragment" />

</navigation>