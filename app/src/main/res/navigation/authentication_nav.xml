<?xml version="1.0" encoding="utf-8"?>

<navigation
    android:id="@+id/authentication"
    app:startDestination="@id/sign_in_fragment"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <fragment
        android:id="@+id/sign_in_fragment"
        tools:layout="@layout/sign_in_fragment"
        android:name="com.bed.seller.presentation.ui.authentication.signin.SignInFragment" >

<!--        <argument-->
<!--            app:nullable="true"-->
<!--            app:argType="string"-->
<!--            android:name="pathArg"-->
<!--            android:defaultValue="@null" />-->

<!--        <deepLink-->
<!--            android:id="@+id/magic_link_deep_link"-->
<!--            app:action="ACTION_VIEW"-->
<!--            app:uri="go://sale/seller/{pathArg}" />-->

        <action
            android:id="@+id/action_sign_in_to_recover"
            app:destination="@id/recover_fragment"  />

        <action
            android:id="@+id/action_sign_in_to_exit"
            app:destination="@id/authentication_exit_fragment" />

        <action
            android:id="@+id/action_sign_in_to_sign_up"
            app:destination="@id/sign_up_fragment"
            app:exitAnim="@anim/nav_pop_exit_to_left"
            app:popExitAnim="@anim/nav_exit_to_right"
            app:popEnterAnim="@anim/nav_enter_from_left"
            app:enterAnim="@anim/nav_pop_enter_from_right" />

        <action
            android:id="@+id/action_sign_in_to_home"
            app:destination="@+id/home"
            app:launchSingleTop="true"
            app:popUpToInclusive="true"
            app:popUpTo="@+id/splash_fragment"
            app:exitAnim="@anim/nav_exit_fade_out"
            app:enterAnim="@anim/nav_enter_fade_in"
            app:popExitAnim="@anim/nav_pop_exit_fade_out"
            app:popEnterAnim="@anim/nav_pop_enter_fade_in" />

    </fragment>

    <fragment
        android:id="@+id/sign_up_fragment"
        tools:layout="@layout/sign_up_fragment"
        android:name="com.bed.seller.presentation.ui.authentication.signup.SignUpFragment" >

        <action
            android:id="@+id/action_sign_up_to_exit"
            app:destination="@id/authentication_exit_fragment" />

        <action
            android:id="@+id/action_sign_up_to_sign_in"
            app:destination="@id/sign_in_fragment"
            app:exitAnim="@anim/nav_exit_to_right"
            app:enterAnim="@anim/nav_enter_from_left"
            app:popExitAnim="@anim/nav_pop_exit_to_left"
            app:popEnterAnim="@anim/nav_pop_enter_from_right" />

        <action
            android:id="@+id/action_sing_up_to_home"
            app:destination="@+id/home"
            app:launchSingleTop="true"
            app:popUpToInclusive="true"
            app:popUpTo="@+id/splash_fragment"
            app:exitAnim="@anim/nav_exit_fade_out"
            app:enterAnim="@anim/nav_enter_fade_in"
            app:popExitAnim="@anim/nav_pop_exit_fade_out"
            app:popEnterAnim="@anim/nav_pop_enter_fade_in" />

    </fragment>

    <dialog
        android:id="@+id/recover_fragment"
        tools:layout="@layout/recover_fragment"
        android:name="com.bed.seller.presentation.ui.authentication.recover.RecoverFragment" />

    <dialog
        android:id="@+id/authentication_exit_fragment"
        tools:layout="@layout/exit_fragment"
        android:name="com.bed.seller.presentation.ui.authentication.exit.AuthExitFragment" />

</navigation>