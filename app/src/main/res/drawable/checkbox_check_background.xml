<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@color/transparent" />

            <size
                android:width="@dimen/check_box_size"
                android:height="@dimen/check_box_size" />

            <corners
                android:topLeftRadius="@dimen/check_box_corner_radius"
                android:topRightRadius="@dimen/check_box_corner_radius"
                android:bottomLeftRadius="@dimen/check_box_corner_radius"
                android:bottomRightRadius="@dimen/check_box_corner_radius" />

            <stroke
                android:width="@dimen/check_box_stroke_radius"
                android:color="@color/white" />
        </shape>
    </item>

    <item
        android:top="@dimen/check_box_icon_corner_radius"
        android:left="@dimen/check_box_icon_corner_radius"
        android:right="@dimen/check_box_icon_corner_radius"
        android:bottom="@dimen/check_box_icon_corner_radius"
        android:width="@dimen/check_box_icon_size"
        android:height="@dimen/check_box_icon_size"
        android:drawable="@drawable/ic_check" />
</layer-list>