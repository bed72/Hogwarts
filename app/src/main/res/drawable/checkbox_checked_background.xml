<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@color/transparent" />

            <size
                android:width="@dimen/check_box_check_size"
                android:height="@dimen/check_box_check_size" />

            <corners android:radius="@dimen/check_box_check_corner_radius" />

            <stroke
                android:width="@dimen/check_box_check_stroke_radius"
                android:color="@color/grey_300" />
        </shape>
    </item>

    <item
        android:top="@dimen/check_box_check_icon_corner_radius"
        android:left="@dimen/check_box_check_icon_corner_radius"
        android:right="@dimen/check_box_check_icon_corner_radius"
        android:bottom="@dimen/check_box_check_icon_corner_radius"
        android:width="@dimen/check_box_check_icon_size"
        android:height="@dimen/check_box_check_icon_size"
        android:drawable="@drawable/ic_check" />
</layer-list>