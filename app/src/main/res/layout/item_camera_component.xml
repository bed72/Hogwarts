<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:gravity="center"
    android:layout_margin="@dimen/very_extra_small_space"
    android:layout_height="@dimen/image_card_height_size"
    android:layout_width="match_parent"
    android:background="@drawable/normal_border_background"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/item_camera_image"
        android:scaleType="fitXY"
        android:layout_width="@dimen/icon_normal_size"
        android:layout_height="@dimen/icon_normal_size"
        android:src="@drawable/ic_camera"
        android:layout_gravity="start|center" />

</LinearLayout>