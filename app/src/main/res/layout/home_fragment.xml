<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".presentation.ui.dashboard.home.HomeFragment" >

    <com.airbnb.lottie.LottieAnimationView
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        android:layout_width="@dimen/permission_icon_size"
        android:layout_height="@dimen/permission_icon_size"
        app:lottie_rawRes="@raw/empty"
        android:layout_gravity="center" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/create_product_button"
        android:text="@string/home_fab_title_button"
        app:icon="@drawable/ic_add"
        android:layout_margin="@dimen/normal_space"
        style="@style/FloatingActionButton"
        android:layout_gravity="bottom|end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/home_fab_title_button" />

</FrameLayout>