<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:gravity="center"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context="com.bed.seller.presentation.ui.splash.SplashFragment" >

    <ImageView
        android:layout_width="@dimen/splash_icon_size"
        android:layout_height="@dimen/splash_icon_size"
        android:src="@drawable/ic_launcher_foreground"
        android:contentDescription="@string/splash_icon_description" />

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:gravity="center"
            style="@style/GreyMediumItalicBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/splash_title_loading" />

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:layout_width="@dimen/progress_bar_size"
            android:layout_height="@dimen/progress_bar_size"
            android:indeterminate="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/extra_large_margin" />

    </LinearLayout>

</LinearLayout>