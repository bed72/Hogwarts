<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:padding="@dimen/normal_padding"
    android:orientation="vertical"
    style="@style/BottomSheetDialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".presentation.ui.authentication.recover.RecoverFragment"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior" >

    <TextView
        android:text="@string/recover_password_title"
        style="@style/SemiBoldHeading5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="@string/title_email_text_input"
        style="@style/MediumBody1"
        android:layout_marginTop="@dimen/small_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/TextInput"
        app:endIconMode="clear_text"
        android:layout_marginTop="@dimen/big_small_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:placeholderText="@string/recover_password_placeholder_email_text_input" >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/email_edit_input"
            style="@style/TextInputEdit"
            tools:text="@string/recover_password_placeholder_email_text_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress" />

    </com.google.android.material.textfield.TextInputLayout>

    <ViewFlipper
        android:id="@+id/action_flipper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/normal_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/recover_button"
                android:text="@string/recover_password_send_recover_button"
                style="@style/NormalButton"
                android:layout_height="@dimen/button_height"
                android:layout_width="match_parent" />

            <Button
                android:id="@+id/close_button"
                style="@style/CancelButton"
                android:layout_height="@dimen/button_height"
                android:layout_marginTop="@dimen/small_margin"
                android:layout_width="match_parent"
                android:text="@string/title_cancel_button" />

        </LinearLayout>

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/progress_indicator"
            android:layout_width="@dimen/progress_bar_dimens"
            android:indeterminate="true"
            android:layout_height="@dimen/progress_bar_dimens"
            android:layout_gravity="center" />

    </ViewFlipper>

</LinearLayout>