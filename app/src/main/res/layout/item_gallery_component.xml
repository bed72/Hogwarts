<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    android:padding="@dimen/very_extra_small_space"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/item_gallery_image"
        android:scaleType="fitXY"
        android:layout_width="@dimen/image_card_dimens"
        android:layout_height="@dimen/image_card_dimens"
        tools:src="@tools:sample/avatars"
        android:layout_gravity="start|center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <CheckBox
        android:id="@+id/select_check_box"
        style="@style/CheckBox"
        android:layout_weight="4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:button="@drawable/checkbox_select_states" />

</androidx.constraintlayout.widget.ConstraintLayout>