<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/item_container_layout"
    android:gravity="center"
    android:layout_margin="@dimen/very_extra_small_space"
    android:layout_height="@dimen/image_card_height_size"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/item_gallery_image"
        android:padding="@dimen/very_extra_small_space"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:src="@tools:sample/avatars"
        android:layout_gravity="start|center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
    
    <FrameLayout
        android:id="@+id/item_badge"
        android:visibility="gone"
        android:layout_width="@dimen/select_border_size"
        android:layout_height="@dimen/select_border_size"
        android:layout_margin="@dimen/small_space"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/normal_border_transparent_background" />

</androidx.constraintlayout.widget.ConstraintLayout>